<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="400" prefWidth="600" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.maua.ControllerInterface">
   <children>
      <VBox alignment="CENTER" layoutX="38.0" layoutY="23.0" prefHeight="354" prefWidth="225.0" spacing="16.0">
         <children>
            <Label fx:id="lblSaida" text="Saida: " />
            <TextField fx:id="txtEntrada" promptText="Informe um Valor" />
            <Button fx:id="btnBotao1" mnemonicParsing="false" onAction="#exibirNome" text="OK" />
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="24.0">
               <children>
                  <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" spacing="16.0">
                     <children>
                        <TextField fx:id="txtNumero1" />
                        <TextField fx:id="txtNumero2" />
                     </children>
                  </VBox>
                  <Button fx:id="btnSomar" mnemonicParsing="false" onAction="#Somar" text="Somar">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
               <padding>
                  <Insets top="16.0" />
               </padding></HBox>
         </children>
      </VBox>
      <VBox layoutX="335.0" layoutY="23.0" prefHeight="354" prefWidth="225" spacing="8.0">
         <children>
            <Label text="Cadastro:" />
            <TextField fx:id="txtNome" promptText="Nome" />
            <TextField fx:id="txtSenha" promptText="Senha" />
            <TextField fx:id="txtUrl" promptText="URL_Foto" />
            <Button fx:id="btnPreview" mnemonicParsing="false" onAction="#previewFoto" text="Preview Foto" />
            <ImageView fx:id="imgFoto" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
            <Button fx:id="btnCadastrar" mnemonicParsing="false" onAction="#cadastrar" text="Cadastrar" />
         </children>
         <padding>
            <Insets bottom="8.0" left="8.0" right="8.0" top="8.0" />
         </padding></VBox>
   </children>
</AnchorPane>
